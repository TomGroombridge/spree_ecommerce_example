<div class="row" id="whatever-you-want-to-call-it">
<h1 style="text-align:center; color: #053b77; font-weight:200; margin-bottom:0px;">Our Selection of Mats</h1>
<h1 style="text-align:center; color: #053b77; font-weight:200; font-size:30px; margin-top:10px">100% recyclable</h1>
<% if products.any? %>
<div id="products" class="row" data-hook>
  <% products.each do |product| %>
    <% url = product_url(product, taxon_id: @taxon.try(:id)) %>
    <div id="product_<%= product.id %>" class="col-md-4 col-sm-6 product-list-item" data-hook="products_list_item" itemscope itemtype="http://schema.org/Product">
      <div class="panel panel-default" style="background:none; border:none">

          <div class="panel-body text-center product-body">
            <%= link_to large_image(product, itemprop: "image", :style => "width: 100%;"), url, itemprop: 'url'%><br/>
            <div class="product-name">
              <%= product.name%>
            </div>
          </div>
          <div class="panel-footer text-center">
            <span itemprop="offers" itemscope itemtype="http://schema.org/Offer">
              <button type="button" class="btn btn-primary btn-lg info-button" style="margin-top:10px">
                <a href="https://royal-mat.herokuapp.com/products/<%= product.id %>" class="info">Mat Specification</a>
              </button>
            </span>
          </div>

      </div>
    </div>
  <% end %>
  <% reset_cycle("classes") %>
</div>
<% end %>
</div>